<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.ninng.qs.user.mapper.IUserMapper">
    <resultMap id="userMap" type="top.ninng.qs.user.entity.User">
        <id property="id" column="id"/>
        <id property="name" column="user_name"/>
        <id property="nickname" column="user_nickname"/>
        <id property="password" column="user_password"/>
    </resultMap>
    <select id="findAll" resultMap="userMap">
        select *
        from user;
    </select>
    <select id="selectById" resultMap="userMap">
        select *
        from user
        where id = #{id};
    </select>
</mapper>
